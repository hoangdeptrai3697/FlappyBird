    private void btn_startActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        jPanel1.remove(btn_start);
        jPanel1.revalidate();
        jPanel1.repaint(); 
        run = 1;
        /*for(int i = 0; i < 10; i++){
            int x = bird.getLocation().x;
            int y = bird.getLocation().y;
            bird.setBounds(x, y+=5, 110, 80);            
        }*/
        startRefreshing();
    }                                         

    private void jLabel1MouseClicked(java.awt.event.MouseEvent evt) {                                     
        int x = bird.getLocation().x;
        int y = bird.getLocation().y;
        if(y < 120)y=120;
        bird.setBounds(x, y-=120, 61, 46);        // TODO add your handling code here:
    }                                    
    
    public void runGame(){
        int x = bird.getLocation().x;
        int y = bird.getLocation().y;
        bird.setBounds(x, y+=20, 61, 46); 
        if(y+5 >= 410) {
            JOptionPane.showMessageDialog(null, "GAME OVER");
            stopRefreshing();
        }
    }
    
    public Timer myTimer = null;
    protected void stopRefreshing() {
        if (myTimer != null) {
            myTimer.stop();
            myTimer = null;
        }
    }
    protected void startRefreshing() {
        stopRefreshing();
        myTimer = new Timer(100, e -> {
            runGame();
        });
        myTimer.start();
    }
    
    
    
